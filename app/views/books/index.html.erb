<body>
  <h1><strong>Books</strong></h1>

  <table>
    <thead>
      <tr>
        <th><strong>Title</strong></th>
        <th><strong>Body</strong></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td>
            <%= link_to 'Show', book_path(book) %> |
            <%= link_to 'Edit', edit_book_path(book) %> |
            <%= link_to 'Destroy', book_path(book), method: :delete, data: { confirm: "Are you sure?" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <h1><strong>New book</strong></h1>

  <% if @book.errors.any? %>
    <div class="error-messages">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

      <%= form_with model: @book, local:true do |form| %>
        <div>
          <%= form.label :title,'Title' %><br>
          <%= form.text_field :title, class: 'input-field' + (' invalid' if @book.errors[:title].any?).to_s %>
        </div>

        <div>
          <%= form.label :body, 'Body' %><br>
          <%= form.text_area :body,class: 'input-field' + (' invalid' if @book.errors[:body].any?).to_s %>
        </div>

        <div>
          <%= form.submit 'Create Book' %>
        </div>
      <% end %>
      
</body>
