<body>
  <h1><strong>Editing Book</strong></h1>

  <% if @book.errors.any? %>
    <div class="error-messages">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being updated:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model:@book, local: true do |form| %>
    <div>
      <%= form.label :title, 'Title' %>
      <%= form.text_field :title %>
    </div>

    <div>
      <%= form.label :body, 'Body' %>
      <%= form.text_area :body %>
    </div>

    <div>
      <%= form.submit 'Update Book' %>
    </div>
    <% end %>

    <%= link_to 'Show', book_path(@book) %> |
    <%= link_to 'Back', books_path %>


</body>
